{
    "name": "@base-monorepo/api",
    "version": "1.0.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "dev": "tsup --watch --onSuccess \"node --env-file=.env dist/index.js\"",
        "build": "tsup src/index.ts --format esm --clean --minify",
        "start": "node dist/index.js",
        "lint": "pnpm biome lint .",
        "format": "pnpm biome format --write .",
        "check": "pnpm biome check --write --max-diagnostics=1000 .",
        "db:migrate-dev": "tsx --env-file=.env src/database/scripts/migrate.ts",
        "db:migrate": "tsx src/database/scripts/migrate.ts"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.9",
        "@hono/zod-validator": "^0.7.6",
        "@node-rs/argon2": "^2.0.2",
        "hono": "^4.11.6",
        "jose": "^6.1.3",
        "kysely": "^0.28.10",
        "kysely-postgres-js": "^3.0.0",
        "pino": "^10.3.0",
        "postgres": "^3.4.8",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.11",
        "@types/node": "^20.19.30",
        "pino-pretty": "^13.1.3",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=24"
    }
}
